<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.home.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:stretchColumns="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="263dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/organization_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="ORGANIZACIÓN"
            android:textColor="#808080"
            app:layout_constraintBottom_toTopOf="@+id/organization_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timehour_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="FECHA Y HORA"
            android:textColor="#808080"
            app:layout_constraintBottom_toTopOf="@+id/timehour_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/place_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="LUGAR"
            app:layout_constraintBottom_toTopOf="@+id/place_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="227dp"
            android:layout_height="27dp"
            android:layout_marginStart="32dp"
            android:text="DESCRIPCIÓN"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="30dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/price_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="PRECIO"
            app:layout_constraintBottom_toTopOf="@+id/price_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price2_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="16dp"
            android:text="PRECIO SOCIO"
            app:layout_constraintBottom_toTopOf="@+id/price_text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_title" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/description_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price_text2"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/description_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_text" />

        <TextView
            android:id="@+id/place_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/submap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/organization_text"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/timehour_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timehour_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="22dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/place_title"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/activitat_text"
            android:layout_width="327dp"
            android:layout_height="26dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="22dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/organization_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="227dp"
            android:layout_height="27dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="ACTIVIDAD"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


        <Button
            android:id="@+id/button"
            android:layout_width="176dp"
            android:layout_height="45dp"
            android:layout_marginStart="132dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="32dp"
            android:text="¡ME APUNTO!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent" />


        <fragment
            android:id="@+id/submap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="380dp"
            android:layout_height="157dp"
            android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/price_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".ui.home.ScrollingActivity" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>