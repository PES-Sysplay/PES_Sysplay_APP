<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.home.ActivityDetail"
    tools:showIn="@layout/activity_scrolling">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:stretchColumns="1">


        <TextView
            android:id="@+id/organization_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="ORGANIZACIÓN"
            android:textColor="#808080"
            app:layout_constraintBottom_toTopOf="@+id/organization_button"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timehour_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="FECHA Y HORA"
            android:textColor="#808080"
            app:layout_constraintBottom_toTopOf="@+id/timehour_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/place_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="LUGAR"
            app:layout_constraintBottom_toTopOf="@+id/place_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="227dp"
            android:layout_height="27dp"
            android:layout_marginStart="32dp"
            android:text="DESCRIPCIÓN"
            app:layout_constraintBottom_toTopOf="@+id/description_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="100dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/price_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:text="PRECIO"
            app:layout_constraintBottom_toTopOf="@+id/price_text"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price2_title"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="16dp"
            android:text="PRECIO SOCIO"
            app:layout_constraintBottom_toTopOf="@+id/price_text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_title" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/description_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/price_text2"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/description_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_text" />

        <TextView
            android:id="@+id/place_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:autoSizeTextType="uniform"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/submap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/organization_button"
            android:layout_width="159dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/timehour_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timehour_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="22dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/place_title"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/activitat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <fragment
            android:id="@+id/submap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/price_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:context=".ui.home.ActivityDetail" />

        <ImageView
            android:id="@+id/people_drawable"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="22dp"
            android:scaleType="fitXY"
            android:src="@drawable/people_foreground"
            app:layout_constraintBottom_toTopOf="@+id/organization_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activitat_text" />

        <TextView
            android:id="@+id/people"
            android:layout_width="112dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="22dp"
            android:gravity="center|left"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/organization_title"
            app:layout_constraintStart_toEndOf="@+id/people_drawable"
            app:layout_constraintTop_toBottomOf="@+id/activitat_text"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlHardcoded" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>